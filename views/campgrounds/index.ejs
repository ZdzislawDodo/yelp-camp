<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <h1>Campgrounds:</h1>
        <p>Our hand picked campgrounds</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new camp</a>
        </p>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <div class="col-xs-12">
            <h3>Our most popular campgrounds:</h3>
        </div>
        <% data.forEach(function(camp) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src=<%= camp.image %>>
                    <div class="caption">
                        <h4>
                            <%= camp.name %>
                        </h4>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">Show Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>