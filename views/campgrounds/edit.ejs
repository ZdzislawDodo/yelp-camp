<% include ../partials/header %>
<div style="text-align: center;" class="container">
    <h1 style="margin-bottom: 25px;">Edit <%= campground.name %> Campground</h1>
    <form style="width: 30%; margin: 0 auto; " method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>"></input>
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0" step="0.01"></input>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>"></input>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="campground[description]" rows="10"><%= campground.description %></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Save Changes</button>
        </div>
    </form>
    <a href="/campgrounds">Go back</a>
</div>
<% include ../partials/footer %>