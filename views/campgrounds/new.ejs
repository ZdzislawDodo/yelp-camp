<% include ../partials/header %>
<div style="text-align: center;" class="container">
    <h1 style="margin-bottom: 25px;">Add New Campground</h1>
    <form style="width: 30%; margin: 0 auto; " method="POST" action="/campgrounds">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" placeholder="Camp Name"></input>
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="campground[price]" placeholder="Price" min="0" step="0.01"></input>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[image]" placeholder="Image URL"></input>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[description]" placeholder="Description"></input>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Add Camp</button>
        </div>
    </form>
    <a href="/campgrounds">Go back</a>
</div>
<% include ../partials/footer %>