<% include ../partials/header %>
<div style="text-align: center;" class="container">
    <h1 style="margin-bottom: 25px;">Add New Comment to <%= campground.name %></h1>
    <form style="width: 30%; margin: 0 auto; " method="POST" action="/campgrounds/<%= campground._id %>/comments">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="Comment"></input>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Add Comment</button>
        </div>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Go back</a>
</div>
<% include ../partials/footer %>