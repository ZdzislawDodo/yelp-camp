<% include ../partials/header %>
<div style="text-align: center;" class="container">
    <h1 style="margin-bottom: 25px;">Edit comment</h1>
    <form style="width: 30%; margin: 0 auto; " method="POST" action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>"></input>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Save Changes</button>
        </div>
    </form>
    <a href="/campgrounds/<%= campground_id %>">Go back</a>
</div>
<% include ../partials/footer %>